<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
   "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>
<title>Mark Olesen : {{ page.title }} </title>
<meta http-equiv="Content-type" content="text/html; charset=utf-8" />
<meta name="language" content="en" />
<link rel="stylesheet" type="text/css" href="/css/default.css" />
<link rel="stylesheet" type="text/css" href="/css/syntax.css" />
</head>

{% assign navTitle = 'Blog' %}
{% for t in page.topnav %}
{% if t.text == page.title %}{% assign navTitle = page.title %}{% endif %}
{% endfor %}

<body>
<div class="page_margins">
  <div id="header">
    <h1><a href="http://olesenm.github.com">Mark Olesen</a></h1>
    <div class="clear"></div>

    <!-- begin: main navigation #nav -->
    <div id="nav">
      <div class="hlist">
        <ul>
          {% for t in page.topnav %}
          {% if t.text == navTitle %}<li id="current">{% else %}<li>{% endif %}
          <a href="{{ t.href }}" {% if t.title %}title="{{ t.title }}"{% endif %}>{{ t.text }}</a>
          </li>
          {% endfor %}
          <li><a href="http://github.com/olesenm">GitHub</a></li>
        </ul>
      </div>
    </div>
    <!-- end: main navigation -->
  </div>

  <!-- begin: main content area #main -->
  <div id="main">
    <div id="col1">
      <div id="col1_content">
        {{ content }}
      </div>
    </div>
    <div id="col3">
      <div id="col3_content">
        <h6 class="vlist">GitHub projects</h6>
        <ul class="vlist">
          <li>
            <a
              href="http://olesenm.github.com/flex-grid"
              title="Tools for GridEngine integration"
              >flex-grid</a>
          </li>
          <li>
            <a
              href="http://olesenm.github.com/xml-qstat"
              title="Web-based status monitoring of Grid Engine clusters"
              >xml-qstat</a>
          </li>
        </ul>
        <h6 class="vlist">Misc. Links</h6>
        <ul class="vlist">
          <li>
            <a
              href="http://gridengine.sunsource.net"
              >GridEngine</a>:
            <a
              href="http://wiki.gridengine.info/wiki/"
              >wiki</a>
          </li>
          <li>
            <a
              href="http://www.OpenFOAM.org"
              >OpenFOAM</a>:
            <a
              href="http://www.cfd-online.com/Forums/openfoam/"
              >forums</a>
          </li>
          </ul>
        <br/>
      </div>
    </div>
    <div class="clear"></div>
  </div>
  <!-- end: #main -->

  <!-- begin: #footer -->
  <div id="footer">
    <a href="/about/">About</a> |
    <a href="http://olesenm.github.com">Blog</a> |
    <a href="/archives/">Archives</a> |
    <a href="/tags/">Categories</a>
    &ndash;
    updated {{ site.time | date:"%Y-%m-%d" }}
  </div>
  <!-- end: #footer -->

</div>

</body>
</html>
