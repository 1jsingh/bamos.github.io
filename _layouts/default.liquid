---
# -*- html -*- mode
topnav:
  - text: About
    href: /about/
  - text: Blog
    href: /
  - text: Archives
    href: /archives/
  - text: Tags
    href: /tags/
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Brandon Amos: {{ page.title }}</title>
    <link href="/css/bootstrap-yeti.min.css" rel="stylesheet">
    <link href="/css/syntax.css" rel="stylesheet">
    <style type="text/css">
body {
  padding-top: 50px;
}
.starter-template {
  padding: 40px 15px;
  text-align: justify;
}
img { border: none; }
img.alignleft {float:left; margin:0 15px 5px 0;}
img.alignright {float:right; margin:0 0 5px 15px;}
img.border {border:3px solid #888; padding:4px;}

.footer-links {
  margin: 10px 0;
  padding-left: 0;
}
.footer-links li {
  display: inline;
  padding: 0 2px;
}
.footer-links li:first-child {
  padding-left: 0;
}
    </style>
  </head>

  <body>
    <div class="navbar navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">Brandon Amos</a>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            {% for t in page.topnav %}
              <li
                {% if t.text == page.title and page.title != "PGP" and page.title != "Curriculum Vitae" and page.title != "Resume" %}
                  class="active"
                {% endif %}
              >
              <a href="{{ t.href }}" title="{{ t.title }}">{{ t.text }}</a>
            </li>
            {% endfor %}
          </ul>
        </div>
      </div>
    </div>

    <div class="container">
      <div class="starter-template">
        <div id="col1">
          {{ content }}
        </div>
      </div>

      <div id="footer">
        <div class="footer-links">
          <ul>
            {% for t in page.topnav %}
              <li
            {% if t.text == page.title and page.title != "PGP" and page.title != "Curriculum Vitae" and page.title != "Resume" %}
              class="active"
          {% endif %}
            >
            <a href="{{ t.href }}" title="{{ t.title }}">{{ t.text }}</a>
            {% if forloop.last == false %} | {% endif %}
            </li>
          {% endfor %}
            <li><small><em>&ndash; Generated {{ site.time | date:"%Y.%m.%d" }}</em></small></li>
            <li>
              <a href="/feed.xml">
                <img class="alignright" src="/images/rss.png" alt="RSS Feed"/>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>

    <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="//static.getclicky.com/js" type="text/javascript"></script>
    <script type="text/javascript">try{ clicky.init(100602499); }catch(e){}</script>
    <script type="text/javascript">var switchTo5x=true;</script>
  </body>
</html>
